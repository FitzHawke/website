---
import { ColorTags, Tags } from "@components/react/Tags";
import { tagColour } from "@data/tagColours";

const { tag } = Astro.props;

let colourSet: string = "NEUTRAL";

if (tagColour[tag as keyof object] !== undefined) {
	colourSet = tagColour[tag as keyof object]!.toUpperCase();
}
---

<Tags color={ColorTags[colourSet as keyof object]}>{tag}</Tags>
